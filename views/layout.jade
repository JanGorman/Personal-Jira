!!! 5
| <html>
head
  meta(charset='utf-8')
  title Personal Jira
  // CSS
  != css('bootstrap.min')
  != css('app')
  style
    body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
    }
  
body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        a.brand Own, personal, Jira.
        div.nav-collapse
          ul.nav
            li
              a(href='#', id='settings')
                i.icon-cog.icon-white 
                &nbsp;Settings
        form.navbar-search.pull-left
          input.search-query(placeholder='Release', type='text')

  .container
    != body
    
    div.modal.hide.fade#dialog_settings
      div.modal-header
        a.close(data-dismiss='modal')&times;
        h3 Settings
      div.modal-body
        fieldset
          div.control-group
            label.control-label(for='wsdl') WSDL
            div.controls
              div.input-prepend
                span.add-on
                  i.icon-bookmark
                input(type='text', name='wsdl')
          div.control-group
            label.control-label(for='project') Project
            div.controls
              div.input-prepend
                span.add-on
                  i.icon-heart
                input(type='text', name='project')
          div.control-group
            label.control-label(for='username') Username
            div.controls
              div.input-prepend
                span.add-on 
                  i.icon-user
                input(type='text', name='username')
          div.control-group
            label.control-label(for='password') Password
            div.controls
              div.input-prepend
                span.add-on
                  i.icon-lock
                input(type='password', name='password')
      div.modal-footer
        button.btn.btn-primary(type='submit')
          i.icon-ok
          | Save
        button.btn(type='cancel')
          i.icon-remove
          | Cancel

  != js('http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.1/jquery.min.js')
  != js('underscore.min')
  != js('bootstrap.min')
  != js('backbone.min')
  != js('backbone.localStorage.min')
  != js('backbone.validation.min')
  != js('backbone.modelbinding.min')
  != js('app')

| </html>